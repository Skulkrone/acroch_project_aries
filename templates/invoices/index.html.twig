{% extends 'base.html.twig' %}

{% block title %}Invoices index{% endblock %}

{% block body %}
    <h1>Invoices index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Cost</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.Date ? invoice.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ invoice.Cost }}</td>
                <td>
                    <a href="{{ path('invoices_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('invoices_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('invoices_new') }}">Create new</a>
{% endblock %}