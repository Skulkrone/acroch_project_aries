{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <h1>Shop index</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for shop in shops %}
                <tr>
                    <td>{{ shop.id }}</td>
                    <td>{{ shop.Label }}</td>
                    <td>
                        <a href="{{ path('shop_show', {'id': shop.id}) }}">show</a>
                        <a href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        
    <div class="lien">
        <a href="{{ path('shop_new') }}">Create new</a>
    </div>
{% endblock %}