{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-bold text-white">Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom / Prénom</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Mot de Passe</th>
                <td>{{ user.password }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Rôle</th>
                <td>{{ user.roles[0] }}</td>
            </tr>
             {% endif %}
        </tbody>
    </table>
    <div class="lien">
        <a href="{{ path('user_index') }}">Retour</a>
        <br />
        <br />
        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}